<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RoomActivity">

    <TextView
            android:text="Copied link"
            android:layout_width="82dp"
            android:layout_height="29dp"
            android:id="@+id/linkLabel" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.08"/>
    <TextView
            android:layout_width="249dp"
            android:layout_height="35dp"
            android:id="@+id/linkContent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.193" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/linkLabel"/>
    <TextView
            android:text="Title"
            android:layout_width="77dp"
            android:layout_height="21dp"
            android:id="@+id/songTitleLabel" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/linkContent"
            app:layout_constraintHorizontal_bias="0.067"/>
    <TextView
            android:layout_width="253dp"
            android:layout_height="46dp"
            android:id="@+id/songTitle" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/songTitleLabel" app:layout_constraintHorizontal_bias="0.165"/>
</android.support.constraint.ConstraintLayout>