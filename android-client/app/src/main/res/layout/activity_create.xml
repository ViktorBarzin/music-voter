<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CreateActivity">

    <TextView
            android:text="Name"
            android:layout_width="90dp"
            android:layout_height="24dp"
            android:id="@+id/textView"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/editText2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="28dp" app:layout_constraintVertical_bias="0.593"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            tools:layout_editor_absoluteY="72dp" android:id="@+id/editText2"
            android:hint="Name" android:layout_marginStart="28dp" app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="Password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/editText3" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/editText2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="28dp" app:layout_constraintVertical_bias="0.521"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            tools:layout_editor_absoluteY="175dp" android:id="@+id/editText3"
            android:hint="Password" android:layout_marginStart="28dp" app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="Number of players"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/editText3" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/spinner1" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="28dp" app:layout_constraintVertical_bias="0.681"/>

    <Spinner
            android:id="@+id/spinner1"
            android:layout_width="228dp"
            android:layout_height="43dp"
            android:background="@android:drawable/btn_dropdown"
            android:spinnerMode="dropdown" tools:layout_editor_absoluteY="280dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="28dp"/>
</android.support.constraint.ConstraintLayout>